<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="408dp"
    android:background="@drawable/shape_white_5">

    <TextView
        android:id="@+id/common_title"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/color_purple_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/common_positive"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/btn_purple_selector"
        android:text="@string/sure"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/common_negative" />

    <Button
        android:id="@+id/common_negative"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="24dp"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/btn_white_selector"
        android:text="@string/cancel"
        android:textColor="@color/color_purple_bg"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

    <FrameLayout
        android:id="@+id/common_fl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/text_666"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/common_negative"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/common_title" />

    <TextView
        android:id="@+id/common_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/text_666"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/common_positive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/common_title" />
</androidx.constraintlayout.widget.ConstraintLayout>